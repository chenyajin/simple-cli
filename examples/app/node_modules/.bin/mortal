#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/wisdom/Documents/simple-scaffold/packages/mortal-cli/bin/node_modules:/Users/wisdom/Documents/simple-scaffold/packages/mortal-cli/node_modules:/Users/wisdom/Documents/simple-scaffold/packages/node_modules:/Users/wisdom/Documents/simple-scaffold/node_modules:/Users/wisdom/Documents/node_modules:/Users/wisdom/node_modules:/Users/node_modules:/node_modules:/Users/wisdom/Documents/simple-scaffold/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/wisdom/Documents/simple-scaffold/packages/mortal-cli/bin/node_modules:/Users/wisdom/Documents/simple-scaffold/packages/mortal-cli/node_modules:/Users/wisdom/Documents/simple-scaffold/packages/node_modules:/Users/wisdom/Documents/simple-scaffold/node_modules:/Users/wisdom/Documents/node_modules:/Users/wisdom/node_modules:/Users/node_modules:/node_modules:/Users/wisdom/Documents/simple-scaffold/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../../packages/mortal-cli/bin/index.js" "$@"
else
  exec node  "$basedir/../../../../packages/mortal-cli/bin/index.js" "$@"
fi
